{
  "name": "orbdb",
  "version": "2.0.0",
  "description": "OrbDB is highly flexible, fast, light weight ORM suitable for prototyping whilst giving the flexibility of easly updating your database schema on the go to suit project chages and the flexibility to use a database of your choice",
  "main": "orb.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taqsblaze/OrbDB.git"
  },
  "keywords": [
    "db",
    "database",
    "flexible",
    "ORM",
    "sqlite",
    "index",
    "json",
    "OrbDB"
  ],
  "author": "Tanaka Chinengundu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/taqsblaze/OrbDB/issues"
  },
  "homepage": "https://github.com/taqsblaze/OrbDB#readme",
  "exports": {
    ".": "./orb.js",
    "./schema": "./schema/schema.js",
    "./adapters/baseAdapter": "./adapters/baseAdapter.js",
    "./adapters/jsonAdapter": "./adapters/jsonAdapter.js",
    "./utils/hash": "./utils/hash.js",
    "./utils/sanitizer": "./utils/sanitizer.js"
  },
  "dependencies": {
    "jest": "^29.7.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "mocha": "^10.8.2"
  }
}
